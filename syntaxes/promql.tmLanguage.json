{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PromQL",
  "scopeName": "source.promql",
  "fileTypes": ["promql"],
  "patterns": [
    { "include": "#comment" },
    { "include": "#string-double" },
    { "include": "#string-single" },
    { "include": "#string-backtick" },
    { "include": "#duration" },
    { "include": "#number" },
    { "include": "#aggregation-operator" },
    { "include": "#aggregation-modifier" },
    { "include": "#operator-logical" },
    { "include": "#operator-comparison" },
    { "include": "#operator-arithmetic" },
    { "include": "#function" },
    { "include": "#function-over-time" },
    { "include": "#keyword-offset" },
    { "include": "#label-matcher" },
    { "include": "#metric-name" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comment": {
      "match": "#.*$",
      "name": "comment.line.hash.promql"
    },
    "string-double": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.promql",
      "patterns": [
        { "match": "\\\\.", "name": "constant.character.escape.promql" }
      ]
    },
    "string-single": {
      "begin": "'",
      "end": "'",
      "name": "string.quoted.single.promql",
      "patterns": [
        { "match": "\\\\.", "name": "constant.character.escape.promql" }
      ]
    },
    "string-backtick": {
      "begin": "`",
      "end": "`",
      "name": "string.quoted.other.promql"
    },
    "duration": {
      "match": "\\b[0-9]+(ms|s|m|h|d|w|y)\\b",
      "name": "constant.numeric.duration.promql"
    },
    "number": {
      "match": "\\b[0-9]+(\\.[0-9]+)?([eE][+-]?[0-9]+)?\\b",
      "name": "constant.numeric.promql"
    },
    "aggregation-operator": {
      "match": "\\b(sum|min|max|avg|group|stddev|stdvar|count|count_values|bottomk|topk|quantile)\\b",
      "name": "keyword.operator.aggregation.promql"
    },
    "aggregation-modifier": {
      "match": "\\b(by|without)\\b",
      "name": "keyword.control.promql"
    },
    "operator-logical": {
      "match": "\\b(and|or|unless)\\b",
      "name": "keyword.operator.logical.promql"
    },
    "operator-comparison": {
      "match": "(==|!=|<=|>=|<|>)",
      "name": "keyword.operator.comparison.promql"
    },
    "operator-arithmetic": {
      "match": "(\\+|-|\\*|/|%|\\^)",
      "name": "keyword.operator.arithmetic.promql"
    },
    "function": {
      "match": "\\b(abs|absent|absent_over_time|ceil|changes|clamp|clamp_max|clamp_min|day_of_month|day_of_week|days_in_month|delta|deriv|exp|floor|histogram_quantile|holt_winters|hour|idelta|increase|irate|label_join|label_replace|ln|log2|log10|minute|month|predict_linear|rate|resets|round|scalar|sgn|sort|sort_desc|sqrt|time|timestamp|vector|year)\\b",
      "name": "support.function.promql"
    },
    "function-over-time": {
      "match": "\\b(avg_over_time|min_over_time|max_over_time|sum_over_time|count_over_time|quantile_over_time|stddev_over_time|stdvar_over_time|last_over_time|present_over_time)\\b",
      "name": "support.function.promql"
    },
    "keyword-offset": {
      "match": "\\b(offset)\\b",
      "name": "keyword.other.promql"
    },
    "label-matcher": {
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.section.braces.begin.promql" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.section.braces.end.promql" }
      },
      "patterns": [
        { "include": "#string-double" },
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "entity.other.attribute-name.promql"
        },
        {
          "match": "(=~|!~|=|!=)",
          "name": "keyword.operator.promql"
        },
        {
          "match": ",",
          "name": "punctuation.separator.promql"
        }
      ]
    },
    "metric-name": {
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
      "name": "variable.other.promql"
    },
    "punctuation": {
      "patterns": [
        { "match": "\\[", "name": "punctuation.section.brackets.begin.promql" },
        { "match": "\\]", "name": "punctuation.section.brackets.end.promql" },
        { "match": "\\(", "name": "punctuation.section.parens.begin.promql" },
        { "match": "\\)", "name": "punctuation.section.parens.end.promql" }
      ]
    }
  }
}
